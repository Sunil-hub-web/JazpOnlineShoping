<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDescription">

    <ImageView
        android:id="@+id/product_Image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred"
        android:src="@drawable/android_samsung"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_Image"
        android:layout_marginTop="@dimen/twenty"
        android:text="@string/mobiles"
        android:textColor="#3F51B5"
        android:textSize="@dimen/edittextsize"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#4E4D4D"
       android:layout_marginTop="@dimen/ten"
        android:layout_below="@id/productName"/>

    <TextView
        android:id="@+id/producPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginTop="@dimen/ten"
        android:text="Mobiles"
        android:textColor="#3F51B5"
        android:textSize="@dimen/edittextsize"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/addToCart"
            android:layout_width="0dp"
            android:layout_height="@dimen/fifty"
            android:layout_weight="1"
            android:text="Add To Cart"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/edittextsize"
            android:textStyle="bold"
            android:gravity="center"
            app:backgroundTint="@null"
            android:background="@drawable/categorytextback"/>

        <Button
            android:id="@+id/buyNow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/fifty"
            android:text="Buy Now"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/edittextsize"
            android:textStyle="bold"
            android:gravity="center"
            app:backgroundTint="@null"
            android:background="@drawable/buynowback"/>

    </LinearLayout>


</RelativeLayout>