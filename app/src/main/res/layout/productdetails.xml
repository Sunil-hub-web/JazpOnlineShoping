<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rr1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/two_hundred_fifty"
        android:layout_marginLeft="10dp"
        android:background="@drawable/homecard_back"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/clicl_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight">

            <ImageView
                android:id="@+id/product_Image"
                android:layout_width="@dimen/hundred_ten"
                android:layout_height="@dimen/hundred_ten"
                android:scaleType="fitCenter"
                android:src="@drawable/mob2"
                android:layout_centerHorizontal="true">

            </ImageView>

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_Image"
                android:layout_marginTop="@dimen/five"
                android:text="Mobiles"
                android:textColor="#3F51B5"
                android:textSize="@dimen/twelve_size"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/producPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productName"
                android:layout_marginTop="@dimen/five"
                android:text="Mobiles"
                android:gravity="center"
                android:textColor="#3F51B5"
                android:textSize="@dimen/twelve_size"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/addToCart"
                android:layout_width="@dimen/two_hundred"
                android:layout_height="@dimen/forty"
                android:text="Add To Cart"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:background="@drawable/categorytextback"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>