<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#F6E01E">

   <ImageView
       android:layout_width="@dimen/twenty"
       android:layout_height="@dimen/twenty"
       android:src="@drawable/arrow"
       android:id="@+id/img_Back"
       android:layout_centerVertical="true"
       android:onClick="ImageBack"
       android:layout_marginLeft="@dimen/ten"></ImageView>

   <ImageView
       android:id="@+id/menu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/baseline_menu"
       android:layout_alignParentRight="true"
       android:layout_marginTop="@dimen/ten"
       android:onClick="Clickmenu"
       android:layout_marginRight="@dimen/thirty">

   </ImageView>

   <ImageView
       android:id="@+id/imagecart"
       android:layout_width="@dimen/twenty_five"
       android:layout_height="@dimen/twenty_five"
       android:src="@drawable/cartimage"
       android:layout_marginTop="@dimen/five"
       android:layout_toLeftOf="@id/menu"
       android:layout_marginRight="@dimen/twenty"
       android:onClick="Cartpage">

   </ImageView>

   <ImageView
       android:id="@+id/search"
       android:layout_width="@dimen/thirty"
       android:layout_height="@dimen/thirty"
       android:src="@drawable/baseline_search"
       android:layout_marginTop="5dp"
       android:onClick="Serachpage"
       android:layout_toLeftOf="@id/imagecart"
       android:layout_marginRight="20dp">

   </ImageView>

   <TextView
       android:id="@+id/name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="#0A22A1"
       android:textSize="@dimen/edittextsize"
       android:text="Home"
       android:layout_marginTop="@dimen/five"
       android:layout_marginLeft="@dimen/twenty"
       android:textStyle="bold"
       android:layout_toRightOf="@id/img_Back"></TextView>

</RelativeLayout>