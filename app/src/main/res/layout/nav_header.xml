<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred">

        <ImageView
            android:layout_width="@dimen/twenty"
            android:layout_height="@dimen/twenty"
            android:src="@drawable/india_flag"
            android:layout_margin="@dimen/fifteen"
            android:id="@+id/back"
            android:layout_alignParentRight="true"></ImageView>


        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="@dimen/hundred_twenty"
            android:layout_height="@dimen/fifty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#132BA6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Logo"
                android:textColor="@color/white"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Hi there"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize"></TextView>

        <TextView
            android:id="@+id/userAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_centerHorizontal="true"
            android:text="Login to access your profile"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize"></TextView>

        <Button
            android:id="@+id/nav_SignInSignUP"
            android:layout_width="@dimen/two_hundred"
            android:layout_height="@dimen/forty"
            app:backgroundTint="@null"
            android:background="@drawable/loginsigninback"
            android:layout_below="@+id/userAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fifteen"
            android:text="SignIn &amp; SignUP"
            android:textColor="#F8E339"
            android:textAllCaps="false"
            android:textSize="@dimen/textsize"></Button>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/r1"
        android:background="#555657"
        android:layout_marginTop="@dimen/thirty"/>

</RelativeLayout>

