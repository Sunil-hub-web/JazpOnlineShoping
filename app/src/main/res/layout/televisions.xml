<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten"
        android:background="@drawable/homecard_back"
        android:layout_marginBottom="@dimen/ten">

        <RelativeLayout
            android:id="@+id/clicl_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="@dimen/hundred_twenty"
                android:layout_height="@dimen/hundred_twenty"
                android:scaleType="fitXY"
                android:src="@drawable/tv2"
                android:layout_centerHorizontal="true"></ImageView>

            <TextView
                android:id="@+id/topProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_image"
                android:layout_marginTop="@dimen/ten"
                android:text="INR 650"
                android:layout_centerHorizontal="true"
                android:textColor="#E13A06"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"
                android:maxEms="7"
                android:ellipsize="end"
                android:singleLine="true"
                android:scrollHorizontally="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>